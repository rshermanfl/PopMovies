<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MovieDetails"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/black">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/backdrop"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop" />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:layout_margin="10dp"
            android:background="@color/cardview_shadow_start_color"
            android:clickable="true"
            app:backgroundTint="@color/design_default_color_primary"
            app:srcCompat="@drawable/ic_baseline_arrow_left_24" />

        <ImageView
            android:id="@+id/d_movie_poster"
            android:layout_width="154dp"
            android:layout_height="231dp"
            android:background="#232323"
            android:layout_gravity="top|left"
            android:layout_marginStart="30dp"
            android:layout_marginTop="80dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/d_movie_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:layout_marginStart="190dp"
            android:layout_marginTop="200dp"
            android:lines="2"
            android:maxLines="3"
            android:padding="6dp"
            android:singleLine="false"
            android:text="King Kong Fights Godzilla All Day"
            android:textColor="#AFAFAF"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/d_release_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:layout_marginStart="190dp"
            android:layout_marginTop="250dp"
            android:lines="1"
            android:maxLines="2"
            android:padding="6dp"
            android:singleLine="false"
            android:text="4/9/2021"
            android:textColor="#AFAFAF"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/d_runtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:layout_marginStart="190dp"
            android:layout_marginTop="290dp"
            android:lines="1"
            android:maxLines="2"
            android:padding="6dp"
            android:singleLine="false"
            android:text="Runtime: 119"
            android:textColor="#AFAFAF"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/d_gross"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:layout_marginStart="190dp"
            android:layout_marginTop="320dp"
            android:lines="1"
            android:maxLines="2"
            android:padding="6dp"
            android:singleLine="false"
            android:text="Box Office: $5,000,000.00"
            android:textColor="#AFAFAF"
            android:textSize="16dp" />
        <TextView
            android:id="@+id/d_budget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:layout_marginStart="10dp"
            android:layout_marginTop="320dp"
            android:lines="1"
            android:maxLines="2"
            android:padding="6dp"
            android:singleLine="false"
            android:text="Budget: $5,000,000.00"
            android:textColor="#AFAFAF"
            android:textSize="16dp" />
        <LinearLayout
            android:id="@+id/d_castholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="360dp"
            android:layout_marginEnd="15dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:maxLines="2"
                android:padding="6dp"
                android:singleLine="false"
                android:text="Cast"
                android:textColor="#AFAFAF"
                android:textSize="18dp" />

        </LinearLayout>
    </FrameLayout>
</ScrollView>